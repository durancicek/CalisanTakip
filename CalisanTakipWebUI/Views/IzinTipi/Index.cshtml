@model IEnumerable<CalisanTakipCommon.IzinTipiVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
    <h1>
        Liste
        <small>
            <i class="ace-icon fa fa-angle-double-right"></i>
            Çalışan İzin Takip
        </small>
    </h1>
</div>

<div class="col-6 text-left text-white">
    <a class="btn btn-success" asp-controller="IzinTipi" asp-action="Create">Tip Ekle</a>

</div>
<br />

<div class="row">
    <div class="col-xs-12">
        <table id="simple-table" class="table  table-bordered table-hover">
            <thead>
                <tr>
                    <th>Liste İsmi</th>
                    <th>Oluşturma Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Ad</td>
                        <td>@item.KayitTarihi</td>
                        <td>
                            <div class="hidden-sm hidden-xs btn-group">

                                <a class="btn btn-xs btn-info" asp-controller="IzinTipi" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="ace-icon fa fa-pencil bigger-120"></i>
                                </a>

                                <a class="btn btn-xs btn-danger" asp-controller="IzinTipi" asp-action="Delete">
                                    <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                </a>
                                <a class="btn btn-xs btn-warning" asp-controller="IzinTipi" asp-action="Detay">
                                    <i class="ace-icon fa fa-flag bigger-120"></i>
                                </a>

                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

