@model CalisanTakipCommon.IzinTipiVM
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<form class="form-horizontal" asp-action="Edit">
    @*@Html.HiddenFor(x=>Model.Id) // Bu ve aşadağıki asp-for tagı aynı işlevi görmektedir. Id yi tutar.*@

    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="col-sm-3 control-label no-padding-right" asp-for="Ad"> İzin Tipi </label>

        <div class="col-sm-9">
            <input asp-for="Ad" type="text" id="form-field-1" placeholder="Username" class="col-xs-10 col-sm-5" />
            <span asp-validation-for="Ad"></span>
        </div>
    </div>

    <div class="space-4"></div>

    <div class="clearfix form-actions">
        <div class="col-md-offset-3 col-md-9">
            <button class="btn btn-info" type="submit" value="Edit">
                <i class="ace-icon fa fa-check bigger-110"></i>
                Kaydet
            </button>
        </div>
    </div>


</form>

